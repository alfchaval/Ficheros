<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.usuario.ficheros.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="res/raw/numero.txt"
        />

    <EditText
        android:id="@+id/edtRaw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="res/assets/valor.txt"
        />

    <EditText
        android:id="@+id/edtAssets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dato.txt en memoria interna"
        />

    <EditText
        android:id="@+id/edtMemoriaInterna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dato_sd en memoria externa"
        />

    <EditText
        android:id="@+id/edtMemoriaExterna"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        />

    <Button
        android:id="@+id/btnSumar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUMAR"
        />

    <TextView
        android:id="@+id/txvMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado (aÃ±adido a operaciones.txt)"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/txvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
